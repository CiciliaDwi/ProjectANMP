<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="16dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-06-30"
            android:textSize="14sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rp15000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Budget: Healing"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@color/cardview_dark_background"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="0.5dp"
            style="@style/Widget.MaterialComponents.Chip.Choice" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
